{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "browser": false
    },
    "parserOptions": {
        "ecmaVersion":2021
    },
    "rules": {
        "indent": ["warn", 2],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-empty": "warn",
        "no-cond-assign": [
            "error",
            "always"
        ]
    }
}
